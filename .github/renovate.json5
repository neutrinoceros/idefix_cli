{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  labels: [
    'dependencies',
  ],
  schedule: [
    // update quarterly
    '* * 1 */3 *',
  ],
  automerge: true,
  minimumReleaseAge: '14 days',
  lockFileMaintenance: {
    enabled: true,
  },
  pep723: {
    managerFilePatterns: [
      '/scripts/*.py/',
    ],
  },
}
